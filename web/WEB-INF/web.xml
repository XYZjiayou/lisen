<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">


    <servlet>
        <description>login</description>
        <display-name>login</display-name>
        <servlet-name>login</servlet-name>
        <servlet-class>MVC.controller.loginAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>MVC/controller/loginAction</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>toJson</description>
        <display-name>toJson</display-name>
        <servlet-name>toJson</servlet-name>
        <servlet-class>MVC.view.toJson</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>toJson</servlet-name>
        <url-pattern>MVC/view/toJson</url-pattern>
    </servlet-mapping>



</web-app>
